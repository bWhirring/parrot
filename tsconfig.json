{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "watch": true,
    "outDir": "./bin",
    "sourceMap": false,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true
  },
  "include": [
    "./lib/**/*",
  ]
}
